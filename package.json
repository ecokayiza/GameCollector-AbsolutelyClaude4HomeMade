{
  "name": "game-collection-app",
  "version": "1.0.0",
  "description": "游戏记录收藏桌面应用",
  "main": "main.js",
  "build": {
    "appId": "com.yourdomain.gamecollector",
    "productName": "GameCollector",
    "files": [
      "assets/**/*",
      "data/**/*",
      "config.json",
      "main.js",
      "script.js",
      "fileSystemManager.js",
      "electron-utils.js",
      "index.html",
      "styles.css"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "portable"
    },
    "asar": false
  },
  "author": "Game Collector",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12"
  }
}